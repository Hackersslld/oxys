-- Add Sections and Elements to Scripts Tab
for i, script in ipairs(scripts) do
    ScriptsTab:CreateButton({
        Name = script.Name,
        Callback = function()
            loadstring(game:HttpGet(script.URL, true))()
            UnloadUI() -- Only unloads UI if on mobile
        end
    })
end

-- Example of a Notification
Rayfield:Notify({
   Title = "Welcome",
   Content = "Thank you for using EclipseHub!",
   Duration = 5,
   Image = 4483362458,
   Actions = {
      Ignore = {
         Name = "Okay!",
         Callback = function()
            print("The user tapped Okay!")
         end
      }
   }
})

-- Example of an Input Box in Home Tab
local Input = HomeTab:CreateInput({
   Name = "Enter Your Name",
   PlaceholderText = "Type your name here...",
   Callback = function(Text)
      print("User entered: " .. Text)
   end,
})

