-- Boot the Library
local Rayfield = loadstring(game:HttpGet('https://sirius.menu/rayfield'))()

-- Create the Main Window
local Window = Rayfield:CreateWindow({
   Name = "OxyHub",
   LoadingTitle = "Loading OxyHub",
   LoadingSubtitle = "Scripting Made Easy",
   ConfigurationSaving = {
      Enabled = true,
      FolderName = "OxyHub", -- Custom folder name
      FileName = "Config"
   },
   Discord = {
      Enabled = false,
      Invite = "noinvitelink",
      RememberJoins = true
   },
   KeySystem = true,
   KeySettings = {
      Title = "Access Key",
      Subtitle = "Enter your key",
      Note = "Get your key from our website",
      FileName = "Key",
      SaveKey = true,
      GrabKeyFromSite = false,
      Key = {"YourKey"} -- Replace "YourKey" with your actual key
   }
})

-- Create Tabs for Different Sections
local HomeTab = Window:CreateTab("Home", 4483362458)
local ScriptsTab = Window:CreateTab("Scripts", 4483362458)

-- Add Sections and Elements to Home Tab
HomeTab:CreateLabel("Welcome to OxyHub!")
HomeTab:CreateLabel("News: Check out the latest updates!")
HomeTab:CreateSection("Server Status")

-- Add eye-catching server status labels with emojis
HomeTab:CreateLabel("Server 1: âœ… Online")
HomeTab:CreateLabel("Server 2: âœ… Online")
HomeTab:CreateLabel("Database: ðŸŸ¢ Online")

HomeTab:CreateSection("Other")
HomeTab:CreateButton({
    Name = "GitHub",
    Callback = function()
        -- Open GitHub repository link
        print("Opening GitHub...")
    end
})

-- Function to unload the UI
local function UnloadUI()
    Rayfield:Destroy() -- Unloads the Rayfield UI
end

-- Add Sections and Elements to Scripts Tab
ScriptsTab:CreateButton({
    Name = "Adopt Me!",
    Callback = function()
        loadstring(game:HttpGet("https://egorikusa.space/271ee1956d4b196c73150e64.lua", true))()
        UnloadUI() -- Unload the UI after script execution
    end
})
ScriptsTab:CreateButton({
    Name = "Bloxburg",
    Callback = function()
        loadstring(game:HttpGet("https://vedrox.com/data/scripts/free/script.lua"))()
        UnloadUI() -- Unload the UI after script execution
    end
})
ScriptsTab:CreateButton({
    Name = "Piggy",
    Callback = function()
        loadstring(Game:HttpGet("https://raw.githubusercontent.com/DFDERD41/autofarms-2-game/main/piggynoob", true))()
        UnloadUI() -- Unload the UI after script execution
    end
})
ScriptsTab:CreateButton({
    Name = "Arsenal",
    Callback = function()
        loadstring(game:HttpGet("https://raw.githubusercontent.com/tbao143/thaibao/main/TbaoHubArsenal"))()
        UnloadUI() -- Unload the UI after script execution
    end
})
ScriptsTab:CreateButton({
    Name = "JailBreak",
    Callback = function()
        loadstring(game:HttpGet("https://raw.githubusercontent.com/BlitzIsKing/UniversalFarm/main/Loader/Regular"))()
        UnloadUI() -- Unload the UI after script execution
    end
})

-- Example of a Notification
Rayfield:Notify({
   Title = "Welcome",
   Content = "Thank you for using our script hub!",
   Duration = 5,
   Image = 4483362458,
   Actions = {
      Ignore = {
         Name = "Okay!",
         Callback = function()
            print("The user tapped Okay!")
         end
      }
   }
})

-- Example of an Input Box in Home Tab
local Input = HomeTab:CreateInput({
   Name = "Enter Your Name",
   PlaceholderText = "Type your name here...",
   Callback = function(Text)
      print("User entered: " .. Text)
   end,
})

