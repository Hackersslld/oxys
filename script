-- Add Scripts to the first tab (Scripts 1)
for i = 1, 25 do
    ScriptsTab1:CreateButton({
        Name = scripts[i].Name,
        Callback = function()
            loadstring(game:HttpGet(scripts[i].URL, true))()
            UnloadUI() -- Unload the UI after script execution
        end
    })
end

-- Add Scripts to the second tab (Scripts 2)
for i = 26, 50 do
    if scripts[i] then
        ScriptsTab2:CreateButton({
            Name = scripts[i].Name,
            Callback = function()
                loadstring(game:HttpGet(scripts[i].URL, true))()
                UnloadUI() -- Unload the UI after script execution
            end
        })
    end
end

-- Add Scripts to the third tab (Scripts 3)
for i = 51, 75 do
    if scripts[i] then
        ScriptsTab3:CreateButton({
            Name = scripts[i].Name,
            Callback = function()
                loadstring(game:HttpGet(scripts[i].URL, true))()
                UnloadUI() -- Unload the UI after script execution
            end
        })
    end
end

-- Example of a Notification
Rayfield:Notify({
   Title = "Welcome",
   Content = "Thank you for using EclipseHub!",
   Duration = 5,
   Image = 4483362458,
   Actions = {
      Ignore = {
         Name = "Okay!",
         Callback = function()
            print("The user tapped Okay!")
         end
      }
   }
})

-- Example of an Input Box in Home Tab
local Input = HomeTab:CreateInput({
   Name = "Enter Your Name",
   PlaceholderText = "Type your name here...",
   Callback = function(Text)
      print("User entered: " .. Text)
   end,
})

